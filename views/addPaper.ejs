
<%- include('partials/header.ejs') %>


<title>Add Paper</title>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/addpaper.css">


<div class="mainClass">
    <div class="div1">
        <div class="role">
            <h3>Logged In As 
                
            
                <% if(role=="student"){ %>
                    <span>Student</span>
               <% }%>
               <% if(role == "teacher"){ %>
                    <span>Teacher</span>
               <%  }%>
           
            
            </h3>


            <hr id="line1">
        </div>
        <div class="logo">
           <img src="/Images/Logo2.jpg" alt="No Image">
        </div>
        <div class="logout">
            <a href="/home" type="button">Home</a>
            <hr id="line2">
        </div>
    </div>


    <div class="div2">
        <div class="heading">
            <h1>Add Paper</h1>
            <hr>
        </div>
    </div>

    <div class="div3">
        <form action="/add-paper" method="POST" enctype="multipart/form-data">
            <div class="inputs">
            <label for="name">Paper Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="inputs">
            <label for="marks_per_question">Marks Per Question:</label>
            <input type="number" id="marks_per_question" name="marks_per_question" required>
        </div>

        <div class="inputs">
    
            <label for="totalMarks">Total Marks:</label>
            <input type="number" id="totalMarks" name="totalMarks" required>
        </div>
        <div class="inputs">
            <label for="questionFile">Upload Questions and Answers:</label>
            <input type="file" id="questionFile" name="questionFile" accept=".txt" required>
        </div>
            <button type="submit">Upload Paper</button>
        </form>

    </div>
    <div class="div4">
        <img src="/Images/example.png" alt="">
    </div>
</div>
















